@page "/login"

@layout EmptyLayout
<PageTitle>Login</PageTitle>

@using Taran.Identity.Dtos.Auth
@using Taran.Shared.Dtos.Languages
@using Taran.UI.Main.Layouts

<section class="vh-100 shakaBg">
    <div class="container h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                @* <img src="/images/login_bg.webp" class="img-fluid" alt="Sample image"> *@
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <EditForm class="mt-3" OnValidSubmit="SendRequest" EditContext="editContext">
                    <DataAnnotationsValidator />
                    <!-- Username input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        @* <label class="form-label" for="UserNameInput">@translator.Translate(nameof(KeyWords.UserName))</label> *@
                        <InputText @bind-Value=loginRequestDto.UserName class="form-control form-control-lg" id="UserNameInput" placeholder="@translator.Translate(nameof(KeyWords.UserName))" />
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        @* <label class="form-label" for="form3Example4">@translator.Translate(nameof(KeyWords.Password))</label> *@
                        <InputText @bind-Value=loginRequestDto.Password class="form-control form-control-lg" id="UserNameInput" placeholder="@translator.Translate(nameof(KeyWords.Password))" type="password" />
                    </div>

@*                     <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Remember me
                            </label>
                        </div>
                        <a href="#!" class="text-body">Forgot password?</a>
                    </div> *@

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            @translator.Translate(nameof(KeyWords.Login))
                        </button>
                        <label class="text-danger ms-3">@LoginError</label>
@*                         <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="#!"
                                                      class="link-danger">Register</a> 
                        </p>*@
                    </div>

                </EditForm>
            </div>
        </div>
    </div>
</section>

@code {
    private LoginRequestDto loginRequestDto = new LoginRequestDto();
    private EditContext? editContext { set; get; }
    private string LoginError { get; set; }

    private bool _busy = false;

    protected override Task OnInitializedAsync()
    {
        editContext = new EditContext(loginRequestDto);

        return base.OnInitializedAsync();
    }

    public async Task SendRequest()
    {
        if (_busy)
            return;
        _busy = true;

        var loginResponse = await httpService.Post<LoginRequestDto, LoginResponseDto>(navConfig.AuthApi + "/Auth", loginRequestDto);
        if (loginResponse.Success)
            navigationManager.NavigateTo(navConfig.UI, true);
        else
            LoginError = translator.Translate(loginResponse.ErrorMessage!);

        _busy = false;
    }
}
